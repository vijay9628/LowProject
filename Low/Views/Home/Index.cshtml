<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Offcanvas Sidebar with PDF Viewer</title>
   @*  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <style>
        /* Make PDF viewer take full width */
        #pdfViewer {
            width: 100%;
            height: 80vh; /* Adjust height dynamically */
            border: none;
        }

        /* Fix menu button size */
        .menu-btn {
            position: fixed;
            top: 5px;
            left: 5px;
            
            padding: 8px 15px;
            font-size: 14px;
        }

        /* Ensure content area does not shrink */
        .content-area {
            padding-top: 50px;
        }
    </style>
</head>
<body class="bg-light">

    <!-- Menu Button -->
    <button class="btn btn-dark menu-btn" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebar">
        <i class="bi bi-list"><spna>Open Files</spna></i>
    </button>

    <div class="container-fluid">
        <div class="row flex-nowrap">
            <!-- Offcanvas Sidebar -->
            <div class="offcanvas offcanvas-start bg-dark text-white" tabindex="-1" id="sidebar">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title">Menu</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>
                </div>
                <div class="offcanvas-body">
                    <ul class="nav nav-pills flex-column">
                        <li class="nav-item">
                            <a href="#" class="nav-link text-white" onclick="btnHome()">
                                <i class="fs-4 bi-house"></i> <span>Home</span>
                            </a>
                        </li>
                        <li>
                            <a href="#submenu1" data-bs-toggle="collapse" class="nav-link text-white">
                                <i class="fs-4 bi-speedometer2"></i> Chapter 1
                                <i class="bi bi-chevron-down float-end"></i>
                            </a>
                            <ul class="collapse nav flex-column ms-3" id="submenu1">
                                <li><a href="#" class="nav-link text-white" onclick="loadPDF('/Images/label.pdf')" data-bs-dismiss="offcanvas">Section 1</a></li>
                                <li><a href="#" class="nav-link text-white" onclick="loadPDF('/Images/Untitled (1).pdf')">Section 2</a></li>
                            </ul>
                        </li>
                        <li>
                            <a href="#submenu2" data-bs-toggle="collapse" class="nav-link text-white">
                                <i class="fs-4 bi-bootstrap"></i> Chapter 2
                            </a>
                            <ul class="collapse nav flex-column ms-3" id="submenu2">
                                <li><a href="#" class="nav-link text-white" onclick="loadPDF('/Images/race.pdf')">Section 3</a></li>
                                <li><a href="#" class="nav-link text-white" onclick="loadPDF('/Images/race.pdf')">Section 4</a></li>
                            </ul>
                        </li>
                        <li>
                            <a href="#submenu3" data-bs-toggle="collapse" class="nav-link text-white">
                                <i class="fs-4 bi-grid"></i> Chapter 3
                            </a>
                            <ul class="collapse nav flex-column ms-3" id="submenu3">
                                <li><a href="#" class="nav-link text-white" onclick="loadPDF('/Images/race.pdf')">Section 5</a></li>
                                <li><a href="#" class="nav-link text-white" onclick="loadPDF('/Images/race.pdf')">Section 6</a></li>
                                <li><a href="#" class="nav-link text-white" onclick="loadPDF('/Images/race.pdf')">Section 7</a></li>
                                <li><a href="#" class="nav-link text-white" onclick="loadPDF('/Images/race.pdf')">Section 8</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Main Content Area -->
            <div class="col py-3 content-area">
                <div id="bodycontent">
                    @* <h3>Welcome to the Content Area</h3> *@
                </div>
                <div class="col py-3">
                    <iframe id="pdfViewer" src=""></iframe>
                </div>
            </div>
        </div>
    </div>

    <script>
        function loadPDF(pdfUrl) {
            document.getElementById('pdfViewer').src = pdfUrl;
        }

        function btnHome() {
            alert("Home button clicked!");
        }
    </script>

</body>
</html>
